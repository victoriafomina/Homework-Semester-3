@model List<TestViewModel>

@{
    ViewData["Title"] = "Tests launches information";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <form  style="margin-top: 3rem" asp-controller="Home" asp-action="RunTests">
        <p>
            <input class="btn btn-dark" type="submit" value="Run tests"/>
        </p>
    </form>
    <table class="table table-striped table-dark">
        <thead>
            <th>Name</th>
            <th>Class name</th>
            <th>Passed/ Ignored</th>
            <th>Elapsed time/ Ignore message</th>
            <th>Launch time</th>
        </thead>
        <tbody>
            @foreach (var test in Model)
            {
                if (test.Ignored)
                {
            <tr>
                <td>@test.Name</td>
                <td>@test.ClassName</td>
                <td>Ignored</td>
                <td>@test.IgnoreMessage</td>
                <td>@test.TestLaunchTime</td>
            </tr>
                }
                else if (test.Passed)
                {
                    <tr>
                        <td>@test.Name</td>
                        <td>@test.ClassName</td>
                        <td>Passed</td>
                        <td>@test.ElapsedTime</td>
                        <td>@test.TestLaunchTime</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>@test.Name</td>
                        <td>@test.ClassName</td>
                        <td>Failed</td>
                        <td>@test.ElapsedTime</td>
                        <td>@test.TestLaunchTime</td>
                        <td></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
